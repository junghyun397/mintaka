{
  "name": "mintaka-webui",
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "scripts": {
    "requirements": "rustup component add rust-src && rustup target add wasm32-unknown-unknown && cargo install wasm-pack typeshare-cli",

    "typeshare:build": "typeshare ../ --lang=typescript --output-file=../mintaka_wasm/types.d.ts",
    "wasm:build": "wasm-pack build ../mintaka_wasm --release --target web --out-name mintaka_wasm --out-dir ../mintaka_webui/src/wasm/pkg -- -Z build-std=std,panic_abort",
    "wasm:package": "pnpm typeshare:build && pnpm wasm:build",

    "dev:wasm": "pnpm wasm:package && vite",
    "dev": "vite",
    "build": "pnpm wasm:package && vite build",
    "serve": "pnpm wasm:package && vite preview"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "solid-devtools": "^0.34.3",

    "vite": "^7.1.11",
    "vite-plugin-solid": "^2.11.8",

    "tailwindcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "daisyui": "^5.5.11"
  },
  "dependencies": {
    "solid-js": "^1.9.0"
  }
}
